{
  "compilerOptions": {
    "target": "ES2020", // Supports modern features for ES2020
    "moduleResolution": "node", // Align module resolution with Node.js
    "allowJs": true,
    "checkJs": false, // Only type-check TypeScript files
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Ensures paths are relative to the project root
    "paths": {
      "@/components/*": ["src/components/*"] // Maps "@/components" to "src/components"
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
